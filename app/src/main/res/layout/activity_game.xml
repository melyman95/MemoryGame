<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".EasyGame">

    <ImageButton
        android:id="@+id/imageButtonEasy8"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/startTimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEasy7"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy9"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy6"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy1"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy2"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEasy1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy3"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEasy2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy4"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy1"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy5"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="155dp"
        app:layout_constraintBottom_toTopOf="@+id/startTimerButton"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEasy4"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy2"
        app:srcCompat="@drawable/cardback" />

    <ImageButton
        android:id="@+id/imageButtonEasy7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonEasy8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy4"
        app:srcCompat="@drawable/cardback" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@android:dimen/thumbnail_height"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="39dp"
        android:layoutDirection="inherit"
        android:text="3:00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startTimerButton"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="@color/cardview_light_background"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy5" />

    <ImageButton
        android:id="@+id/imageButtonEasy6"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonEasy9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEasy5"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEasy3"
        app:srcCompat="@drawable/cardback" />
</androidx.constraintlayout.widget.ConstraintLayout>